@model IPagedList<QL_ThuVien.Models.PhieuYeuCau>
@using PagedList
@using PagedList.Mvc
@{

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayOutPhieuYeuCau.cshtml";
    QL_ThuVien.Controllers.PhieuYeuCausController yeuCausController = new QL_ThuVien.Controllers.PhieuYeuCausController();
}



@using (Html.BeginForm("GetList", "PhieuYeuCaus", FormMethod.Get, new { @class = "navbar-form navbar-right", role = "search", id = "search-form", onsubmit = "return empty();" }))
{
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Tìm kiếm sách" name="SearchTerm" value="@ViewBag.SearchTerm" id="search-box">
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success hidden-xs">Tìm</button>
    </div>
}


<table class="table khonghinhnen">
    <tr>
        <th>
            @Html.DisplayName("Tên bạn đọc")
        </th>
        <th>
            @Html.DisplayName("Tên nhân viên")
        </th>
        <th>
            @Html.DisplayName("Số ĐK cá biệt")
        </th>
        <th>
            @Html.DisplayName("Ngày mượn")
        </th>
        <th>
            @Html.DisplayName("Ngày trả")
        </th>
        <th>
            @Html.DisplayName("Trễ")
        </th>
        <th>
            @Html.DisplayName("Trạng thái")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BanDoc.BD_HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.NV_HOTEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TL_SoDangKyCaBiet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PYC_NgayMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PYC_NgayTra)
            </td>
            <td>
                @yeuCausController.SoNgayTre(item.PYC_IDPhieuYeuCau)
            </td>
            @if (yeuCausController.GetTrangThai(item.PYC_IDPhieuYeuCau) == 0)
            {
                <td>Đã trả</td>
            }
            else
            {
                <td> <a href="@Url.Action("ChuyenTrangThai", new { id = item.PYC_IDPhieuYeuCau,id2 = 0})" onclick="return confirm('Xác nhận đã trả !');">Trả</a></td>
            }
            
        </tr>
    }

</table>
<div class="col-md-12 text-center">
    @Html.PagedListPager(Model, sotrang => Url.Action("getList", new { page = sotrang }))
</div>
