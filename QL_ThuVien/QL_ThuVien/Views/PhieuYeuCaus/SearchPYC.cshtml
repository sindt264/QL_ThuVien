@model IEnumerable<QL_ThuVien.Models.PhieuYeuCau>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayOutPhieuYeuCau.cshtml";
    QL_ThuVien.Controllers.PhieuYeuCausController yeuCausController = new QL_ThuVien.Controllers.PhieuYeuCausController();
}
<br />
<br />
<h2 class="tieude text-center">Danh sách</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BanDoc.BD_HoVaTen)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NhanVien.NV_HOTEN)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TaiLieu.TL_TieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PYC_NgayMuon)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PYC_NgayTra)
        </th>
        <th>
            <b>Trễ</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BanDoc.BD_HoVaTen)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NhanVien.NV_HOTEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TaiLieu.TL_TieuDe)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PYC_NgayMuon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PYC_NgayTra)
            </td>
            <td>
                @yeuCausController.SoNgayTre(item.PYC_IDPhieuYeuCau)
            </td>
            <td>
                <a href="/PhieuyeuCaus/Edit/@item.PYC_IDPhieuYeuCau"><input type="button" value="Sửa" class="btn btn-info" /></a>

                <a href="/PhieuyeuCaus/Delete/@item.PYC_IDPhieuYeuCau"><input type="button" value="Xóa" class="btn btn-danger" /></a>
            </td>
        </tr>
    }

</table>

