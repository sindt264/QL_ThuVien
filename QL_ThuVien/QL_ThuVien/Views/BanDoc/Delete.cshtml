@model QL_ThuVien.Models.BanDoc

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_LayOutPhieuYeuCau.cshtml";
}
<div class="col-sm-12 khonghinhnen" style="font-family:'Times New Roman', Times, serif">

    <h3 style="font-family:'Times New Roman', Times, serif">Xem lại thông tin trước khi xóa?</h3>
    <hr />
    <div class="row">
        <div class="col-lg-10">
            <div class="panel panel-default">
                <div class="panel-heading" style="font-weight:bold; font-size:20px">
                    Thông tin chi tiết
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            <div>
                                <table class="table">
                                    <tr>
                                        <td>
                                            Số thẻ
                                        </td>
                                        <td>
                                            @Html.DisplayFor(model => model.BD_SoThe)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Họ và tên
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_HoVaTen)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Ngày sinh
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_NgaySinh)
                                        </td>

                                    </tr>
                                    <tr>
                                        <td>
                                            Số CMND
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_SoCMND)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Ngày cấp
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_CapNgay)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Nơi cấp
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_NoiCap)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Trình độ
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_TrinhDo)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Nghề nghiệp
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_NgheNghiep)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Thời hạn lao động
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_HopDongLaoDong)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Địa chỉ
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_DiaChiNoiLamViec)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            SDT di dộng
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_DTDIDong)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Email
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_Email)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Chỗ ở hiện tại
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_ChoOHienTai)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Số lượng sách được mượn
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_GioiHanMuon)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Ngày cấp thể
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_NgayCapThe)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Hạn sử dụng thể
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_THSDThe)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Thời gian mượn
                                        </td>

                                        <td>
                                            @Html.DisplayFor(model => model.BD_ThoiGianMuon)
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Hình ảnh
                                        </td>

                                        <td>
                                            <img src="@Url.Content("~/Content/AvtBanDoc/" + @Model.BD_HinhAnh )" alt="cover page" width="45" />
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <p>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Xác nhận" class="btn btn-danger" />
                                        <button class="btn btn-default"><a href="/BanDoc">Trở về</a></button>
                                    </div>
                                }

                            </p>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </div>
</div>

