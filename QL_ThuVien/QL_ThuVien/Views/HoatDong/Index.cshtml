<!-- One -->
<section id="one" class="wrapper style1">
    <div class="container">
        <header class="major">
            <h2>Hình ảnh hoạt động</h2>
            <br />
            <p>
                Một số hoạt động mới nhất của thư viện<br />
            </p>
        </header>
        <div class="container">
            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>
                @{int i = 0;}
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @foreach (var item in ViewBag.data)
                    {
                        if (i == 0)
                        {
                            <div class="item active">
                                <img src="@hoatDongController.getImage(item.HD_IDHoatDong)" style="width:100%;">
                                <div class="carousel-caption">
                                    <a href="~/HoatDong/Details/@item.HD_IDHoatDong">
                                        <h2>@item.HD_ChuDe</h2>
                                    </a>
                                    <p>@item.HD_NoiDung</p>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="item">
                                <img src="@hoatDongController.getImage(item.HD_IDHoatDong)" style="width:100%;">
                                <div class="carousel-caption">
                                    <a href="~/HoatDong/Details/@item.HD_IDHoatDong">
                                        <h2>@item.HD_ChuDe</h2>
                                    </a>
                                    <p>@item.HD_NoiDung</p>
                                </div>
                            </div>
                        }
                        i++;
                    }
                    @*<div class="item">
                                <img src="~/Content/HoatDong/images/slide02.jpg" alt="Chicago" style="width:100%;">
                                <div class="carousel-caption">
